p#notice = notice
.row
  h2 Actions
  = link_to 'Needs', needs_path

.row
  .col-md-6
    h1= @foundation.name
    = link_to 'Edit', edit_foundation_path(@foundation)
    br
    | Mission:
    = @foundation.mission
    br
    | Population:
    = @foundation.population
    br
  .col-md-6
    h2 Contact info
    | Phone:
    = @foundation.contact_info.phone
    br
    | Address:
    = @foundation.contact_info.address
    br
    = mail_to @foundation.contact_info.email, 'Contact'

.row
  h2 Needs
  ul
    - @foundation.needs.each do |need|
      li
        = need.description
        = link_to 'Help', '#'
        = link_to 'Mark solved', '#'
        ul
          label Helping
          br
          - need.helps.each do |help|
            = help.helper.name
            br
            = help.description
            = link_to 'Accept', '#'
            = link_to 'Ignore', '#'
            = link_to 'Contact', '#'